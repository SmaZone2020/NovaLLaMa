<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GGUFLoader.UserPages"
      xmlns:modern="http://schemas.inkore.net/lib/ui/wpf/modern" x:Class="GGUFLoader.UserPages.Tip_LoadAndDownload"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Tip_LoadAndDownload">

    <Grid>

        <StackPanel VerticalAlignment="Center">

            <modern:FontIcon Icon="{x:Static modern:SegoeFluentIcons.Error}" FontSize="72" Margin="0,0,0,20" Foreground="#FFC85D5D"/>

            <TextBlock Text="Oops, there's nothing here!" FontSize="24" FontWeight="Bold" TextAlignment="Center"/>
            <TextBlock Text="Go download and import the model." FontSize="20" TextAlignment="Center" Foreground="#FF848484"/>

            <Button Content="Download Online Model" HorizontalAlignment="Center" Margin="0,20,0,0" Click="Button_Click"/>
            <Button Content="Load Local Model"  HorizontalAlignment="Center" Margin="0,18,0,0" Click="Load_Click"/>
        </StackPanel>

    </Grid>
</Page>
