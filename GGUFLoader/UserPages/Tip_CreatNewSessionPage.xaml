<Page x:Class="GGUFLoader.UserPages.Tip_CreatNewSessionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
      xmlns:local="clr-namespace:GGUFLoader.UserPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Tip_CreatNewSessionPage">
    <StackPanel VerticalAlignment="Center">

        <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Error}" FontSize="72" Margin="0,0,0,20" Foreground="#FFC85D5D"/>

        <TextBlock Text="Oops, there's nothing here!" FontSize="24" FontWeight="Bold" TextAlignment="Center"/>
        <TextBlock Text="Let's select a model and create a session!" FontSize="20" TextAlignment="Center" Foreground="#FF848484"/>

        <ComboBox x:Name="ModelList" Height="34" Width="310" HorizontalAlignment="Center" Margin="0,20,0,0"/>
        <Button x:Name="AddSession" Content="Add Session"  HorizontalAlignment="Center" Margin="0,18,0,0" Click="AddSession_Click"/>
    </StackPanel>
</Page>
